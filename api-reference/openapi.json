    "/tcn/call-outcome/{tcn-cid}": {
      "get": {
        "summary": "Get TCN Call Outcome",
        "description": "Retrieves the call outcome for a specific TCN call ID. This endpoint is designed to support TCN's SIP integration where calls are routed to CollectWise AI agents.",
        "parameters": [
          {
            "name": "tcn-cid",
            "in": "path",
            "required": true,
            "description": "The TCN call identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Call outcome found and returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TCNCallOutcome"
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing TCN CID parameter",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Invalid or missing API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Call outcome not found (call in progress or not available)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TCNCallOutcomeNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
