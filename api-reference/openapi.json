                "schema": {
                  "type": "object",
                  "properties": {
                    "createdDebtors": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/DebtorResponse"
                      }
                    },
                    "failedDebtors": {
                      "type": "array",
